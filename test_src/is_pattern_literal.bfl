fn main(): int {
  // Unit
  val u = ();
  assert(u is ());

  val i = 42;
  assert(not (i is 41));
  assert(i is 42);

  val s = "hello";
  assert(s is "hello");
  assert(not (s is "world"));

  val c = 'x';
  assert(c is 'x');
  assert(not (c is 'f'));

  val b = true;
  assert(not (b is false));
  assert(b is true);

  val opt = Some(42);
  assert(opt is Some(_));
  assert(not (opt is None));

  val foo = { x: 1, y: "asdf" };
  // Wildcard pattern
  if foo is _ {
    assert(true);
  };

  // Variable pattern
  if foo is f {
    assert(f.x == 1 and f.y == "asdf");
  };

  // Else works
  mut else_ran = false;
  if foo is { x: 200 } { () } else {
    else_ran = true;
  };
  assert(else_ran);

  // Record pattern, with integer pattern
  // and nested variable pattern
  if foo is { x: 1, y } {
    assert(y == "asdf");
  };

  // Record pattern where inner has condition statements
  val bar = { x: Some(1) };
  if bar is { x: Some(x) } {
    assert(x == 1);
  };

  // Optionals
  val opt = Some({ x: 1 });
  if opt is Some({ x: 2 }) {
    ()
  } else assert(true);

  0
}
