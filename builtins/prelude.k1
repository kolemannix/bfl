// Must have ability id 0
ability Equals {
  fn equals(self: Self, other: Self): bool
}

intern fn sizeOf[T](): u64
intern fn alignOf[T](): u64
intern fn typeId[T](): bool
fn typeEq[T, U](): bool {
  typeId[T]() == typeId[U]()
}

fn new[T](value: T): T* {
  val ptr = _k1_malloc(sizeOf[T]());
  val t = ptr as T*;
  referenceSet(t, value);
  t
}

