type NewArray[T] = { len: u64, cap: u64, data: Pointer }
namespace NewArray {

  fn new[T](len: u64): NewArray[T] {
    val data = if len == 0 {
      ();
      Pointer::null()
    } else {
      val sizeBytes = sizeOf[T]() * len;
      _k1_malloc(sizeBytes)
    };
    { len: len, cap: len, data: data }
  }

  fn getRef[T](self: NewArray[T], index: u64): T* {
    if index >= self.len {
      crash("Array index out of bounds")
    };
    val tRef: T* = self.data.refAtIndex(index);
    tRef
  }

  fn set[T](self: NewArray[T], index: u64, elem: T): unit {
    val tRef = self.getRef(index);
    referenceSet(tRef, elem);
  }

  fn get[T](self: NewArray[T], index: u64): T {
    val tRef = self.getRef(index);
    *tRef
  }

  fn _grow[T](self: NewArray[T]*): unit {
    val newCap: u64 = if self.cap == 0 1 else self.cap * 2;
    val newSize = newCap * sizeOf[T]();

    if self.data.isNull() {
      val ptr = _k1_malloc(newSize);
      self.data = ptr;
    } else {
      println("realloc");
      realloc(self.data, newSize);
      ()
    };
    if self.data.isNull() {
      crash("allocation failed in array grow");
    };

    self.cap = newCap;
  }

  fn push[T](self: NewArray[T]*, elem: T): unit {
    val startLength = self.len;
    if startLength == self.cap {
      self._grow();
    };
    self.len = startLength + 1;
    self.set(startLength, elem);
    ()
  }

  fn isEmpty[T](self: NewArray[T]): bool {
    self.len == 0
  }

  fn first[T](self: NewArray[T]): T? {
    if not self.isEmpty() {
      self.get(0)
    } else {
      None
    }
  }

  fn last[T](self: NewArray[T]): T? {
    if not self.isEmpty() {
      self.get(self.len - 1)
    } else {
      None
    }
  }
}

namespace Array {

  intern fn get[T](self: Array[T], index: u64): T
  intern fn set[T](self: Array[T], index: u64, value: T): unit

  intern fn new[T](len: u64): Array[T]
  intern fn length[T](self: Array[T]): u64
  intern fn capacity[T](self: Array[T]): u64
  intern fn grow[T](self: Array[T]): unit
  intern fn set_length[T](self: Array[T], new_length: u64): unit


  fn push[T](self: Array[T], elem: T): unit {
    val start_length = self.length();
    if start_length == self.capacity() {
      self.grow();
    };
    self.set(start_length, elem);
    self.set_length(start_length + 1);
  }

  fn first[T](self: Array[T]): T? {
    if self.length() > 0 {
      self.get(0)
    } else None
  }

  fn last[T](self: Array[T]): T? {
    if self.length() > 0 {
      self.get(self.length() - 1)
    } else None
  }
}

impl Equals for Array[int] {
  // todo: Obviously this should be a memcmp
  fn equals(self: Array[int], other: Array[int]): bool {
    if self.length() != other.length() {
      false
    } else {
      mut i: u64 = 0;
      while i < self.length() {
        if self.get(i) != other.get(i) {
          return(false);
        };
        i = i + 1;
      };
      true
    }
  }
}

